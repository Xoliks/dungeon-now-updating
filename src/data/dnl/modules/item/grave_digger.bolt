    get_nbt
    add_custom_model_data

from ../event/on_player_mined_block import on_player_mined_block

id = ctx.meta.item.grave_digger

nbt = get_nbt("grave_digger", id, "false")

loot_table ../item/grave_digger {
    "pools": [
        {
            "rolls": 1,
            "entries": [
                {
                    "type": "minecraft:item",
                    "name": "minecraft:iron_shovel",
                    "functions": [
                        {
                            "function": "minecraft:set_name",
                            "entity": "this",
                            "name": {
                                "translate": "Ancient Pickaxe",
