@listener(on_player_mined_block)
def player_mined_block():
    if score @s dnl.mainhand matches id run function ./grave_digger/mined_block:
        if score @s dnl.mined_grass_block matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_podzol matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_mycelium matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_dirt_path matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_dirt matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_coarse_dirt matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_rooted_dirt matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        if score @s dnl.mined_farmland matches 1.. at @e[type=item,nbt={Age:0s},limit=1,sort=nearest] run function ./grave_digger/destroy_blocks
        

function ./grave_digger/destroy_blocks:
    if block ~1 ~ ~ #dnl:item/grave_digger/minable run setblock ~1 ~ ~ air destroy
    if block ~-1 ~ ~ #dnl:item/grave_digger/minable run setblock ~-1 ~ ~ air destroy
    if block ~ ~ ~1 #dnl:item/grave_digger/minable run setblock ~ ~ ~1 air destroy
    if block ~ ~ ~-1 #dnl:item/grave_digger/minable run setblock ~ ~ ~-1 air destroy
    if block ~1 ~ ~-1 #dnl:item/grave_digger/minable run setblock ~1 ~ ~-1 air destroy
    if block ~-1 ~ ~1 #dnl:item/grave_digger/minable run setblock ~-1 ~ ~1 air destroy
    if block ~1 ~ ~1 #dnl:item/grave_digger/minable run setblock ~1 ~ ~1 air destroy
    if block ~-1 ~ ~-1 #dnl:item/grave_digger/minable run setblock ~-1 ~ ~-1 air destroy
    
    if block ~ ~1 ~ #dnl:item/grave_digger/minable run setblock ~ ~1 ~ air destroy
    if block ~1 ~1 ~ #dnl:item/grave_digger/minable run setblock ~1 ~1 ~ air destroy
    if block ~-1 ~1 ~ #dnl:item/grave_digger/minable run setblock ~-1 ~1 ~ air destroy
    if block ~ ~1 ~1 #dnl:item/grave_digger/minable run setblock ~ ~1 ~1 air destroy
    if block ~ ~1 ~-1 #dnl:item/grave_digger/minable run setblock ~ ~1 ~-1 air destroy
    if block ~1 ~1 ~-1 #dnl:item/grave_digger/minable run setblock ~1 ~1 ~-1 air destroy
    if block ~-1 ~1 ~1 #dnl:item/grave_digger/minable run setblock ~-1 ~1 ~1 air destroy
    if block ~1 ~1 ~1 #dnl:item/grave_digger/minable run setblock ~1 ~1 ~1 air destroy
    if block ~-1 ~1 ~-1 #dnl:item/grave_digger/minable run setblock ~-1 ~1 ~-1 air destroy

    if block ~ ~-1 ~ #dnl:item/grave_digger/minable run setblock ~ ~-1 ~ air destroy
    if block ~1 ~-1 ~ #dnl:item/grave_digger/minable run setblock ~1 ~-1 ~ air destroy
    if block ~-1 ~-1 ~ #dnl:item/grave_digger/minable run setblock ~-1 ~-1 ~ air destroy
    if block ~ ~-1 ~1 #dnl:item/grave_digger/minable run setblock ~ ~-1 ~1 air destroy
    if block ~ ~-1 ~-1 #dnl:item/grave_digger/minable run setblock ~ ~-1 ~-1 air destroy
    if block ~1 ~-1 ~-1 #dnl:item/grave_digger/minable run setblock ~1 ~-1 ~-1 air destroy
    if block ~-1 ~-1 ~1 #dnl:item/grave_digger/minable run setblock ~-1 ~-1 ~1 air destroy
    if block ~1 ~-1 ~1 #dnl:item/grave_digger/minable run setblock ~1 ~-1 ~1 air destroy
    if block ~-1 ~-1 ~-1 #dnl:item/grave_digger/minable run setblock ~-1 ~-1 ~-1 air destroy

block_tag ./grave_digger/minable {
    "description": "Dirt type blocks that can be mined with grave digger",
    "values": [
