from reapermc:event_handler import Event, listener
from reapermc:event/on_server_tick import on_server_tick

on_entity_tick = Event('on_entity_tick')
on_entity_tick.set_handler_path(f"reaper_framework:__internal__/event_handler/on_entity_tick")


@on_entity_tick.handler
def handler():

    @listener(on_server_tick)
    def _on_server_tick():
        as @e[type=#dnl:mobs_and_players] at @s:
            on_entity_tick.trigger()